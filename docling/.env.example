# =============================================================================
# Docling Configuration
# Document processing and conversion service
# =============================================================================

# -----------------------------------------------------------------------------
# Service Configuration (REQUIRED - Pre-configured)
# -----------------------------------------------------------------------------
# Enable web UI for easy access
DOCLING_SERVE_ENABLE_UI=true

# Enable remote services support
DOCLING_SERVE_ENABLE_REMOTE_SERVICES=true

# Allow external plugins
DOCLING_SERVE_ALLOW_EXTERNAL_PLUGINS=true

# Load models at boot for faster first requests
DOCLING_SERVE_LOAD_MODELS_AT_BOOT=true

# -----------------------------------------------------------------------------
# Service Information
# -----------------------------------------------------------------------------
# Access URL: http://docling.localhost
#
# Features:
# - Convert various document formats (PDF, DOCX, HTML, etc.)
# - Extract text and structure from documents
# - OCR support for scanned documents
# - RESTful API and web UI
#
# Supported formats:
# - Input: PDF, DOCX, PPTX, HTML, Markdown, and more
# - Output: Markdown, JSON, HTML
#
# Technical:
# - Stateless service (no data persistence required)
# - CPU-based processing (no GPU requirements)
# - Models loaded at boot for optimal performance
